<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/user_info', user: @user %>
      <%= render 'layouts/new_book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <tr>
            <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg", size:'40x40'  %>
              <% link_to user_path(@user.id) do %>
              <%= link_to @user.name, user_path(@user.id) %>       
              <% end %>
            </td>

            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@books.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>


    </div>
  </div>
</div>