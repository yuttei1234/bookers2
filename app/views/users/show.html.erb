<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'layouts/notification' %>

    <div class="col-md-3">
      <%= render 'layouts/user_info', user: @user %>
      <%= render 'layouts/new_book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
          <tr>
            
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg" %>              
                <%= link_to user_path(@user.id) do %>
            <% end %>
            </td>
            
            <td><%= link_to book.title,book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>