<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layout/_user_info', user: @user %>
      <%= render 'layout/_new_book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
            <td><% link_to user_path(book.user.id) do %></td>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg" %></td>
            <% end %>
            </td>
            <td><%= link_to book.title,book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>